<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimaryInverse">@color/icons</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light.Dialog</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.Button.Secondary" parent="AppTheme.Button">
        <item name="android:background">@color/icons</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Subhead" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/subhead_text_size</item>
    </style>

    <style name="AppTheme.Text.Body" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="AppTheme.Text.Body.Secondary" parent="AppTheme.Text">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.FloatingLabel">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/content_padding</item>
    </style>

    <style name="AppTheme.InputLabel">
        <item name="android:layout_marginTop">@dimen/label_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/label_bottom_margin</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="AppTheme.InputLabel.Inverse" parent="AppTheme.InputLabel">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.InputText">
        <item name="android:layout_marginTop">@dimen/input_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/input_bottom_margin</item>
    </style>

    <style name="AppTheme.InputText.Big" parent="AppTheme.InputText">
        <item name="android:textSize">@dimen/big_input_text_size</item>
    </style>

    <style name="AppTheme.InputText.Big.Inverse" parent="AppTheme.InputText.Big">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>

</resources>
